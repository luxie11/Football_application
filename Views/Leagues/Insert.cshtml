
@{
    ViewData["Title"] = "Leagues";
}
@model FootballApplication.ViewModels.LeagueView
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="row">
    <div class="col-12 ">
        <form class="match-update" method="post" asp-controller="Leagues" asp-action="Insert">
            <div class="input-field">
                @Html.TextBox("Name", null, new { @placeholder = "Name" })
            </div>
            <div class="input-field">
                @Html.TextBox("NumberOfClubs", null, new { @placeholder = "Number of Clubs" })
            </div>
            <div class="input-field">
                @Html.TextBox("Founded", null, new { @placeholder = "League founded" })
            </div>
            <div class="submit-button">
                <button type="submit" class="btn">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
