
@{
    ViewData["Title"] = "Leagues";
}
@model FootballApplication.ViewModels.PlayersView
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="row">
    <div class="col-12 ">
        <form class="match-update" method="post" asp-controller="Players" asp-action="Edit">
            <div class="input-field">
                @Html.TextBox("Firstname", Model.player.FirstName, new { @placeholder = "Firstname" })
            </div>
            <div class="input-field">
                @Html.TextBox("Lastname", Model.player.LastName, new { @placeholder = "Lastname" })
            </div>
            <div class="input-field">
                @Html.TextBox("Position", Model.player.Position, new { @placeholder = "Position" })
            </div>
            <div class="input-field">
                @Html.TextBox("KitNumber", Model.player.KitNumber, new { @placeholder = "Kit number" })
            </div>
            <div class="input-field">
                @Html.TextBox("Nationality", Model.player.Nationality, new { @placeholder = "Nationality" })
            </div>
            <div class="input-field">
                @Html.DropDownListFor(el => el.player.FkPlayerTeam, new SelectList(Model.teams.Select(el => new { Value = el.IdTeam, Key = el.TeamName }), "Value", "Key"), "Select player club")
            </div>

            <div class="submit-button">
                <button type="submit" class="btn">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>
